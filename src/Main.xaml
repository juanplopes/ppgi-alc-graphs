<Window x:Class="EigenThings.Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Eigenthings" Height="402" Width="844"         
        xmlns:Sample="clr-namespace:EigenThings"
                xmlns:isom="clr-namespace:GraphSharp.Algorithms.Layout.Simple.FDP;assembly=GraphSharp"

        xmlns:zoom="clr-namespace:WPFExtensions.Controls;assembly=WPFExtensions">
    <Grid>
        <TextBox Name="GraphText" AcceptsReturn="True" DockPanel.Dock="Top" Margin="6,0,0,0" Height="170" VerticalAlignment="Top" HorizontalAlignment="Left" Width="194" />
        <Button Name="CreateGraph" Click="CreateGraph_Click" DockPanel.Dock="Bottom" Margin="6,176,0,165" HorizontalAlignment="Left" Width="194">Mostrar</Button>
        <Sample:MyGraphLayout x:Name="layout" Margin="206,12,374,0"  LayoutAlgorithmType="ISOM" OverlapRemovalAlgorithmType="FSA" Graph="{Binding}" ShowAllStates="false" AsyncCompute="True" HighlightAlgorithmType="Simple" VerticalAlignment="Top">
            <Sample:MyGraphLayout.LayoutParameters>
                <isom:ISOMLayoutParameters />
            </Sample:MyGraphLayout.LayoutParameters>
        </Sample:MyGraphLayout>
    </Grid>

</Window>
